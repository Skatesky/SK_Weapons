<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ================================= Industrial ==================================== -->

 <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_KnockGun</defName>
    <label>KnockGun</label>
    <description>A Modified Pistol that is Agile and does a Good Amount Of Damage.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/KnockGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_KnockGun</defaultProjectile>
        <warmupTime>0.1</warmupTime>
        <range>100.9</range>
        <burstShotCount>30</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>20</muzzleFlashScale>
        <forcedMissRadius>1.9</forcedMissRadius>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_KnockGun</defName>
    <label>KnockGun bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageAmountBase>100</damageAmountBase>
      <speed>100</speed>
      <damageDef>Flame</damageDef>
      <explosionRadius>1.1</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.90</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>

</Defs>
