<?xml version="1.0" encoding="utf-8"?>
<Defs>
    
    <!-- 烈焰火舌 -->

	<!-- StormFlower custom bullet -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_SKStormFlower</defName>
		<label>StormFlower bullet</label>
		<graphicData>
			<texPath>Things/Projectile/StormFlower_Projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>20</damageAmountBase>
			<speed>70</speed>
		</projectile>
	</ThingDef>

	<!-- 火焰伤害的子弹 -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_SKStormFlowerFlame</defName>
		<label>烈焰火舌子弹</label>
		<graphicData>
			<texPath>Things/Projectile/StormFlower_Projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
            <damageDef>Flame</damageDef>
			<damageAmountBase>18</damageAmountBase>
			<stoppingPower>1</stoppingPower>
			<speed>70</speed>
		</projectile>
	</ThingDef>

	<!-- 射速较快，射程较远，可以造成火焰伤害，压制能力很强。 -->
	<ThingDef ParentName="SK_BaseMakeableGun">
		<defName>Gun_SKStormFlower</defName>
		<label>烈焰火舌</label>
		<description>射速较快，射程较远，可以造成火焰伤害，压制能力很强。</description>
		<graphicData>
			<texPath>Things/Item/Equipment/Weapons/StormFlower</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<soundInteract>Interact_SMG</soundInteract>
		<recipeMaker>
			<researchPrerequisite>DustWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>30000</WorkToMake>
			<MarketValue>800</MarketValue>
			<Mass>2.0</Mass>
			<AccuracyTouch>0.95</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.65</AccuracyMedium>
			<AccuracyLong>0.45</AccuracyLong>
			<RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>300</Steel>
			<ComponentSpacer>3</ComponentSpacer>
			<Plasteel>60</Plasteel>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SKStormFlower</defaultProjectile>
				<warmupTime>0.5</warmupTime>
				<range>40</range>
				<burstShotCount>8</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<soundCast>Bullet_SKStormFlowerFlame</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
            <li>
                <label>grip把手</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
			<li>
				<label>barrel枪管</label>
				<capacities>
					<li>Cut</li>
                    <li>Poke</li>                  
				</capacities>
				<power>10</power>
				<cooldownTime>1.2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

</Defs>