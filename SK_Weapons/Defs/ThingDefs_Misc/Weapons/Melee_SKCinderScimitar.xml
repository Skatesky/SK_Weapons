<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- 定义近战武器，近战武器不需要定义子弹 -->
	<ThingDef ParentName="SK_BaseCraftableMeleeWeapon">
		<defName>Melee_SKCinderScimitar</defName>
		<label>火焰刀</label>
		<description>附带火焰伤害和爆炸伤害，并且免疫火焰。护甲穿透很高，略低于【惊鸿】。</description>
		<graphicData>
			<texPath>Things/Item/Equipment/Weapons/Cinder_Scimitar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.4</drawSize>
		</graphicData>
		<soundInteract>Interact_BeatFire</soundInteract>
		<recipeMaker>
			<researchPrerequisite>ChineseAncientWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>16</Crafting>
				<Intellectual>10</Intellectual>
				<Artistic>8</Artistic>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>60000</WorkToMake>
			<MarketValue>800</MarketValue>
			<Mass>2.0</Mass>
		</statBases>
		<equippedAngleOffset>-55</equippedAngleOffset>
		<equippedStatOffsets>
			<MeleeDodgeChance>0.5</MeleeDodgeChance>
			<MeleeHitChance>4</MeleeHitChance>
			<Flammability>-1.0</Flammability> <!-- 易燃性 -->
		</equippedStatOffsets>
		<costList>
			<Steel>500</Steel>
			<Plasteel>200</Plasteel>
		</costList>		
		<tools>
			<li>
				<label>edge刀锋</label>
				<capacities>
					<li>SK_Inflame_Slash</li>
				</capacities>
				<power>20</power>
        		<armorPenetration>0.4</armorPenetration>
				<cooldownTime>1.3</cooldownTime>
				<extraMeleeDamages>
					<li>
						<def>Stun</def>
						<amount>15</amount>
						<chance>50.0</chance>
					</li>
				</extraMeleeDamages>
			</li>
			<li>
				<label>point刀刃</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>25</power>
        		<armorPenetration>0.5</armorPenetration>
				<cooldownTime>1.0</cooldownTime>
				<extraMeleeDamages>
					<li>
						<def>EMP</def>
						<amount>15</amount>
						<chance>80.0</chance>
					</li>
				</extraMeleeDamages>
			</li>
		</tools>
	</ThingDef>

</Defs>