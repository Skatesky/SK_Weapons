<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 近距离的炮弹攻击 -->

    <!-- 爆炸伤害的子弹 -->
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_SKEmberCelica</defName>
        <label>Ember Celica bullet</label>
        <graphicData>
            <texPath>Things/Projectile/Ember_Celica_Projectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Bomb_SKEmberCelica</damageDef>
            <explosionRadius>1.5</explosionRadius>
            <speed>50</speed>
        </projectile>
    </ThingDef>

    <!-- Emp伤害的子弹 -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_BombEMP</defName>
    <label>rocket</label>
    <graphicData>
      <texPath>Things/Projectile/Ember_Celica_Projectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageAmountBase>16</damageAmountBase>
      <speed>50</speed>
      <damageDef>EMP</damageDef>
      <explosionRadius>3</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.90</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>

    <!-- 机械克星，五雷轰顶  -->
    <ThingDef ParentName="SK_BaseMakeableGun">
        <defName>Gun_SKEmberCelica</defName>
        <label>Ember_Celica</label>
        <description>可以发射5颗Emp炸弹的火炮，射程中等，只能造成Emp伤害，堪称机族克星。</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Weapons/Ember_Celica</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.9</drawSize>
        </graphicData>
        <soundInteract>Interact_Shotgun</soundInteract>
        <recipeMaker>
            <researchPrerequisite>DustWeapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>30000</WorkToMake>
            <MarketValue>800</MarketValue>
            <Mass>2.0</Mass>
            <AccuracyTouch>0.85</AccuracyTouch>
            <AccuracyShort>0.77</AccuracyShort>
            <AccuracyMedium>0.38</AccuracyMedium>
            <AccuracyLong>0.20</AccuracyLong>
            <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>300</Steel>
            <ComponentSpacer>3</ComponentSpacer>
            <Plasteel>60</Plasteel>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_BombEMP</defaultProjectile>
                <forcedMissRadius>1</forcedMissRadius>
                <warmupTime>1</warmupTime>
                <range>30</range>
                <burstShotCount>5</burstShotCount>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <soundCast>Shot_Shotgun</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <equippedAngleOffset>-45</equippedAngleOffset>
        <tools>
            <li>
                <label>barrel枪管</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Bomb_SKEmberCelica</li>
                </capacities>
                <power>15</power>
                <cooldownTime>0.8</cooldownTime>
            </li>
        </tools>
    </ThingDef>

</Defs>