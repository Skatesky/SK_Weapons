<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 洛神之殇 -->

	<!-- Crescent Rose rifle custom bullet -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_SKCrescentRoseRifle</defName>
		<label>洛神之泪</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
      		<damageDef>Frostbite</damageDef>
			<damageAmountBase>30</damageAmountBase>
			<stoppingPower>2</stoppingPower>
			<speed>90</speed>
      		<armorPenetrationBase>0.4</armorPenetrationBase>
		</projectile>
	</ThingDef>

	<!-- Crescent Rose base weapon, rifle form, craftable-->

	<ThingDef ParentName="SK_BaseMakeableGun">
		<defName>Gun_SKCrescentRoseRifle</defName>
		<label>洛神之殇</label>
		<description>射程极远，属于射程最远的枪，伤害较高，附带冰冻效果，缺点是射速慢。</description>
		<graphicData>
			<texPath>Things/Item/Equipment/Weapons/Crescent_Rose_Rifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<researchPrerequisite>DustWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<!-- <recipeUsers Inherit="False">
        		<li>FabricationBench</li>
      		</recipeUsers> -->
		</recipeMaker>
		<statBases>
			<WorkToMake>30000</WorkToMake>
			<MarketValue>800</MarketValue>
			<Mass>4</Mass>
			<AccuracyTouch>0.70</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.85</AccuracyMedium>
			<AccuracyLong>0.80</AccuracyLong>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
    	<equippedStatOffsets>
      		<ShootingAccuracyPawn>0.1</ShootingAccuracyPawn>
    	</equippedStatOffsets>
		<costList>
			<Steel>300</Steel>
			<ComponentSpacer>3</ComponentSpacer>
			<Plasteel>60</Plasteel>
		</costList>		
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_SKCrescentRoseRifle</defaultProjectile>				
				<warmupTime>0.5</warmupTime>
				<range>55</range>				
				<soundCast>Shot_SniperRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock枪托</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel枪管</label>
				<capacities>
					<li>Poke</li>					
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>	   

</Defs>