<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 神威火炮，范围攻击 -->

    <!-- 神威炮弹 -->
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_SKMagnhild</defName>
        <label>神威炮弹</label>
        <graphicData>
            <texPath>Things/Projectile/Magnhild_Projectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Bomb_SKMagnhild</damageDef>
            <explosionRadius>4</explosionRadius>
            <speed>50</speed>
        </projectile>
    </ThingDef>

    <!-- 火焰炮弹 -->
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_BombFlame</defName>
        <label>rocket</label>
        <graphicData>
        <texPath>Things/Projectile/Magnhild_Projectile</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
        <damageAmountBase>25</damageAmountBase>
        <speed>50</speed>
        <damageDef>Flame</damageDef>
        <explosionRadius>3</explosionRadius>
        <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
        <preExplosionSpawnChance>0.90</preExplosionSpawnChance>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        </projectile>
    </ThingDef>


    <!-- 枪支定义 -->
    <ThingDef ParentName="SK_BaseMakeableGun">
        <defName>Gun_SKMagnhild</defName>
        <label>神威火炮</label>
        <description>射程仅次于洛神之殇的火炮，爆炸范围较大，伤害可观，不过射速较慢。</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Weapons/Magnhild_Launcher</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.5</drawSize>
        </graphicData>
        <soundInteract>Interact_Magnhild_Launcher</soundInteract>
        <recipeMaker>
            <researchPrerequisite>DustWeapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>30000</WorkToMake>
            <MarketValue>800</MarketValue>
            <Mass>6</Mass>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.77</AccuracyShort>
            <AccuracyMedium>0.88</AccuracyMedium>
            <AccuracyLong>0.60</AccuracyLong>
            <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
        </statBases>
        <equippedStatOffsets>
          <MoveSpeed>-0.1</MoveSpeed>
          <MeleeDodgeChance>-0.1</MeleeDodgeChance>
          <MentalBreakThreshold>-0.1</MentalBreakThreshold>
        </equippedStatOffsets>
        <costList>
            <Steel>300</Steel>
            <ComponentSpacer>3</ComponentSpacer>
            <Plasteel>60</Plasteel>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_SKMagnhild</defaultProjectile>
                <forcedMissRadius>1</forcedMissRadius>
                <warmupTime>1.5</warmupTime>
                <range>45</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>Shot_Magnhild</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>14</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <!-- 操作列表 -->
            <li>
                <label>grip把手</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel枪管</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>12.5</power>
                <cooldownTime>2.5</cooldownTime>
            </li>
        </tools>
    </ThingDef>

</Defs>